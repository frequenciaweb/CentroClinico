<div id="book" class="col-md-4 content_middle wow flipInY" data-wow-duration="1.5s" data-wow-delay="0.3s">
    <h3>Agendamento de Consultas</h3>
    <script type="text/javascript">
        function verificarTipAgendameto() {            
            var selecionado = document.getElementById("Particular").value;
            document.getElementById("divFrmAgendamento").style.display = "none";
            if ((selecionado == 'True') || (selecionado == 'False')) {
                document.getElementById("divFrmAgendamento").style.display = "block";
            }
        }
    </script>
    <form asp-action="Agendamento" asp-controller="Consultas" method="post">
        @Html.DropDownListFor(model => model.Particular, new List<SelectListItem>
               { new SelectListItem{Text="Consulta Particular", Value="True"},
                new SelectListItem{Text="Consulta Convênio", Value="False"}}, 
                "Selecione o Tipo de Consulta", new { @class = "form-control", onchange = "verificarTipAgendameto()" })

        <div id="divFrmAgendamento" style="display: none">
            <input type="text" placeholder="Nome" asp-for="Cliente.Usuario.Nome" required="">
            <input type="text" placeholder="E-mail" asp-for="Cliente.Usuario.Email" required="">
            <input type="password" placeholder="Senha" asp-for="Cliente.Usuario.Senha" required="">
            <input type="text" placeholder="Celular" asp-for="Cliente.Usuario.Celular" required="">
            <input type="text" onfocus="(this.type='date')" placeholder="Data de Nascimento" asp-for="Cliente.Usuario.Nascimento" required="">
            <input type="text" onfocus="(this.type='date')" placeholder="Data Para Consulta" asp-for="DataHora" required="">
            <select asp-items="ViewBag.Especialidades" asp-for="EspecialidadeID" class="frm-field required sect"></select>
            <input type="submit" value="Agendar">
        </div>
    </form>
</div>